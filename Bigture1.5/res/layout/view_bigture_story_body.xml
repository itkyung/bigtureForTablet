<?xml version="1.0" encoding="utf-8"?>
<com.clockworks.android.tablet.bigture.views.story.page.ViewBodyPage xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="901dp"
    android:layout_height="633dp" >

    <RelativeLayout
        android:layout_width="901dp"
        android:layout_height="633dp"
        android:background="@drawable/bigturestorypage_book_paper_bg" >
		
         <LinearLayout
            android:id="@+id/stickerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="20dp"
            android:padding="0dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iconLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/artworkspage_image_icon_sticker_love" />

            <TextView
                android:id="@+id/loveCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="24" />

            <ImageView
                android:id="@+id/iconAwesome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/artworkspage_image_icon_sticker_awesome" />

            <TextView
                android:id="@+id/awesomeCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="24" />

            <ImageView
                android:id="@+id/iconWow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/artworkspage_image_icon_sticker_wow" />

            <TextView
                android:id="@+id/wowCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="16dp"
                android:text="24" />

            <ImageView
                android:id="@+id/iconFantastic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/artworkspage_image_icon_sticker_fantastic" />

            <TextView
                android:id="@+id/fantasticCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="16dp"
                android:text="24" />

            <ImageView
                android:id="@+id/iconFun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/artworkspage_image_icon_sticker_fun" />

            <TextView
                android:id="@+id/funCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="24" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager1"
            android:layout_width="583dp"
            android:layout_height="402dp"
            android:layout_marginLeft="183dp"
            android:layout_marginTop="72dp" >
        </android.support.v4.view.ViewPager>
        
        <Button 
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_story_artwork_left"
            android:layout_alignLeft="@+id/viewPager1"
            android:layout_alignTop="@+id/viewPager1"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="178dp"
            />
        
        <Button 
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_story_artwork_right"
            android:layout_alignRight="@+id/viewPager1"
            android:layout_alignTop="@+id/viewPager1"
            android:layout_marginRight="13dp"
            android:layout_marginTop="178dp"
            />
       	   
        
        
        
          <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/viewPager1"
            android:layout_alignRight="@+id/viewPager1"
            android:layout_below="@+id/viewPager1"
            android:layout_marginTop="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
		       	  <TextView
		            android:id="@+id/descLabel"
		            android:layout_width="579dp"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:textColor="@color/story_page_desc"
		            android:textSize="26dp"
		            android:textStyle="bold" />
        	 </LinearLayout>
         </ScrollView>
       	 
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/viewPager1"
            android:layout_alignTop="@+id/stickerContainer" >

            <Button
                android:id="@+id/btnTalkMap"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_btn_story_talkmap" />

            <Button
                android:id="@+id/btnMore"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_btn_story_more" />

        </LinearLayout>
           
    </RelativeLayout>
</com.clockworks.android.tablet.bigture.views.story.page.ViewBodyPage>