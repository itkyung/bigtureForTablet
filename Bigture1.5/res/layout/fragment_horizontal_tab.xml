        android:text="@string/common_tab_all"
        android:textColor="@color/tab_text_n"
        android:textSize="18dp" />
     
    <ImageView
        android:id="@+id/ivSeperator7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvMenu6"
        android:src="@drawable/common_tabarea_devider_01" /> 
      
    <RelativeLayout
        android:id="@+id/ivMark1"
        android:layout_width="150dp"
        android:layout_height="13dp"
        android:layout_alignLeft="@+id/tvMenu1"
        android:layout_marginTop="38dp"
       
        android:background="@drawable/common_tabarea_select" />

    <RelativeLayout
        android:id="@+id/ivMark2"
        android:layout_width="150dp"
        android:layout_height="13dp"
        android:layout_alignLeft="@+id/tvMenu2"
        android:layout_marginTop="38dp"
      
        android:background="@drawable/common_tabarea_select"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ivMark3"
        android:layout_width="150dp"
        android:layout_height="13dp"
        android:layout_alignLeft="@+id/tvMenu3"
        android:layout_marginTop="38dp"
       
        android:background="@drawable/common_tabarea_select"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/ivMark4"
        android:layout_width="150dp"
