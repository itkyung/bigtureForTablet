<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuContainer"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:background="#fdfbf4"
    android:clipChildren="false" >
   

    <ImageView
        android:id="@+id/ivSeperator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:src="@drawable/common_tabarea_devider_01" />

    <TextView
        android:id="@+id/tvMenu1"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@+id/ivSeperator1"
        android:gravity="center"
        android:text="My Class"
        android:textColor="@color/tab_text_p"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/ivSeperator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvMenu1"
        android:src="@drawable/common_tabarea_devider_01" />

    <TextView
        android:id="@+id/tvMenu2"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_toRightOf="@+id/ivSeperator2"
