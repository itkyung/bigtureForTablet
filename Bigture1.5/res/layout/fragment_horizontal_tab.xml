          <ImageView
              android:id="@+id/imageDown5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="30dp"
              android:src="@drawable/common_tabarea_left_arrow_icon" />
      </LinearLayout>
      
      <LinearLayout  android:id="@+id/tabFindFriend"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="22dp"
          android:gravity="center_vertical"
          android:visibility="gone" >
        
	      <Button 
	          android:id="@+id/btnFindFriend"
	          android:layout_width="200dp"
	          android:layout_height="47dp"
	          android:drawableLeft="@drawable/selector_btn_find_icon"
         	  android:drawablePadding="0dp"
         	  android:text="@string/mybigture_lb_find_friends"
      	      android:textSize="18dp"
      	      android:textStyle="bold"
      	      android:textColor="@color/tab_find_text"
  			  android:gravity="left|center_vertical"
	          android:background="@drawable/selector_btn_find"
	      />
	      
      </LinearLayout>
      <LinearLayout
          android:id="@+id/tabCardMenu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="20dp"
          android:layout_marginTop="15dp"
          android:gravity="center_vertical"
          android:visibility="gone" >

          <TextView
              android:id="@+id/tabCardLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:text="Received"
              android:textSize="16dp" />

          <ImageView
              android:id="@+id/imageDown4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="30dp"
