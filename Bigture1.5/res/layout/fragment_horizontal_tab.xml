        android:visibility="gone" />
    
    
     <LinearLayout
          android:id="@+id/tabAction1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="20dp"
          android:layout_marginTop="15dp"
          android:gravity="center_vertical"
          android:visibility="gone" >

          <TextView
              android:id="@+id/tabSortLabel1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:text="@string/common_tab_all"
              android:textSize="16dp" />

          <ImageView
              android:id="@+id/imageDown2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="30dp"
              android:src="@drawable/common_tabarea_left_arrow_icon" />
          
          <TextView
              android:id="@+id/tabSortLabel2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:text="@string/label_recent"
              android:textSize="16dp" />

          <ImageView
              android:id="@+id/imageDown3"
              android:layout_width="wrap_content"
