        android:text="Hot"
        android:textColor="@color/tab_text_n"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/ivSeperator4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvMenu3"
        android:src="@drawable/common_tabarea_devider_01" />

    <TextView
        android:id="@+id/tvMenu4"
        android:layout_width="150dp"
        android:layout_height="43dp"
        
        android:layout_toRightOf="@+id/ivSeperator4"
        android:gravity="center"
        android:text="@string/common_tab_all"
        android:textColor="@color/tab_text_n"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/ivSeperator5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvMenu4"
        android:src="@drawable/common_tabarea_devider_01" />

    <TextView
        android:id="@+id/tvMenu5"
        android:layout_width="150dp"
        android:layout_height="43dp"
        
        android:layout_toRightOf="@+id/ivSeperator5"
