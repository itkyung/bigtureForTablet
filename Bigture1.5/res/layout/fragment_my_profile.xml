<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0dp"
    >

	<LinearLayout 
	    android:layout_width="456dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:focusable="true"
   		android:focusableInTouchMode="true"
	    android:padding="0dp">
    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="136dp"
	        android:orientation="horizontal"
	     	android:focusable="true"
    		android:focusableInTouchMode="true"
	        >
	        <RelativeLayout 
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:layout_marginTop="36dp"
	            android:padding="0dp"
	            >
	            <ImageView 
	                android:id="@+id/profileImage"
	                android:layout_width="80dp"
	                android:layout_height="80dp"
	                android:scaleType="centerCrop"
	                android:src="@drawable/settings_profile_80x80"
	                />
	            <Button 
	                android:id="@+id/btnEditImage"
	                android:layout_width="fill_parent"
	                android:layout_height="20dp"
	                android:layout_alignParentBottom="true"
	                android:text="Edit"
	                android:textColor="@color/white"
	                android:textStyle="bold"
	                android:textSize="14dp"
	                android:background="@color/map_top_layer"
	                />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_marginLeft="20dp"
	             android:layout_marginTop="36dp"
	            android:padding="0dp"
	            >
	             <TextView
			        android:id="@+id/textView1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/label_bigture_id"
			        android:textSize="16dp"
			        android:textStyle="bold"
			        android:textColor="#786e5a"
			         />
	             <TextView
			        android:id="@+id/txtBigtureId"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentTop="true"
			        android:layout_toRightOf="@+id/textView1"
			        android:layout_marginLeft="25dp"
			        android:text="222"
			        android:textSize="16dp"
			        android:textColor="#000000"
			         />
	             <TextView
			        android:id="@+id/textView2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignLeft="@+id/textView1"
			        android:layout_below="@+id/textView1"
			        android:layout_marginTop="10dp"
			        android:text="Job title"
			        android:textSize="16dp"
			        android:textStyle="bold"
			        android:textColor="#786e5a"
			         />
	             <TextView
			        android:id="@+id/txtJob"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignTop="@+id/textView2"
			        android:layout_toRightOf="@+id/textView2"
			        android:layout_marginLeft="25dp"
			        android:text="job"
			        android:textSize="16dp"
			        android:textColor="#000000"
			         />
	        </RelativeLayout>
	
	    </LinearLayout>
	    <LinearLayout 
	         android:layout_width="fill_parent"
	         android:layout_height="1dp"
	         android:background="#dad9d6"
	         android:orientation="vertical"
	         ></LinearLayout>        
	           
	    <TextView
	        android:id="@+id/textNick"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:text="@string/setting_lb_myprofile_nickname"
	        android:textSize="16dp"
	        android:textStyle="bold"
	        android:textColor="#888888"
	         />
		
	    <EditText
	        android:id="@+id/editNickname"
	        android:layout_width="match_parent"
	        android:layout_height="46dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/common_inputbox_1_bg"
	        android:ems="10"
	        android:hint="Enter Nickname"
	        android:textColorHint="@color/text_color_hint"
	        android:paddingLeft="13dp" >
	
	        
	    </EditText>
		
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="16dp"
	      
	        android:orientation="horizontal" >
	
	        <RelativeLayout
	            android:layout_width="223dp"
	            android:layout_height="wrap_content" >
	
	            <TextView
	                android:id="@+id/textView3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/label_birthday"
	                android:textStyle="bold"
	       			android:textColor="#888888"
	                android:textSize="16dp" />
	
	            <RelativeLayout
	                android:id="@+id/linearLayout3"
	                android:layout_width="223dp"
	                android:layout_height="46dp"
	                android:layout_below="@+id/textView3"
	                android:layout_marginTop="10dp"
	                
	                android:gravity="center_vertical"
	                android:paddingRight="10dp"
	                >
	
	                <EditText
	                    android:id="@+id/birthdayLabel"
	                    android:layout_width="180dp"
	                    android:layout_height="46dp"
	                    android:gravity="center_vertical"
	                    android:background="@drawable/common_inputbox_1_bg"
	                    android:textSize="16dp"
	                    android:inputType="number"
	                    android:paddingLeft="10dp" />
	
	                <ImageView
	                    android:id="@+id/imagePickupBirthday"
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:layout_alignParentRight="true"
	                    android:scaleType="center"
	                    android:visibility="gone"
	                    android:src="@drawable/settings_list_arrow" />
	            </RelativeLayout>
	        </RelativeLayout>
	
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	          
	            android:layout_marginLeft="10dp" >
	
	            <TextView
	                android:id="@+id/textView5"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/label_gender"
	                android:textStyle="bold"
	       			android:textColor="#888888"
	                android:textSize="16dp" />
	
	            <Button
	                android:id="@+id/btnMale"
	                android:layout_width="112dp"
	                android:layout_height="46dp"
	                android:layout_below="@+id/textView5"
	                android:layout_marginTop="10dp"
	                android:background="@drawable/selector_btn_settings_tab_left"
	                android:text="@string/setting_lb_myprofile_male"
	                android:textStyle="bold"
	       			android:textColor="#555555"
	                android:textSize="16dp" />
	
	            <Button
	                android:id="@+id/btnFemale"
	                android:layout_width="111dp"
	                android:layout_height="46dp"
	                android:layout_alignTop="@+id/btnMale"
	                android:layout_toRightOf="@+id/btnMale"
	                android:background="@drawable/selector_btn_settings_tab_right"
	                android:text="@string/setting_lb_myprofile_female"
	                android:textStyle="bold"
	       			android:textColor="#555555"
	                android:textSize="16dp" />
	        </RelativeLayout>
	    </LinearLayout>
		
	    <RelativeLayout
	        android:id="@+id/relativeLayout1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="14dp" >
	
	        <TextView
	            android:id="@+id/countryLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/setting_lb_myprofile_country"
	            android:textStyle="bold"
	       		android:textColor="#888888"
	            android:textSize="16dp" />
	
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/countryLabel"
	            android:layout_marginTop="10dp"
	            android:background="@drawable/inputbox"
	            android:gravity="center_vertical"
	            android:paddingRight="10dp" >
	
	            <TextView
	                android:id="@+id/countrySelect"
	                android:layout_width="430dp"
	                android:layout_height="46dp"
	                android:textSize="16dp"
	                android:gravity="center_vertical"
	                android:paddingLeft="10dp" />
	
	            <ImageView
	                android:id="@+id/pickupCountry"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_gravity="right"
	                android:gravity="right"
	                android:scaleType="center"
	                android:src="@drawable/settings_list_arrow" />
	        </LinearLayout>
	    </RelativeLayout>
	    
	     <TextView
	        android:id="@+id/textProfile"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="16dp"
	        android:text="@string/label_profile"
	        android:textSize="16dp"
	        android:textStyle="bold"
	        android:textColor="#888888"
	         />
		
		    <EditText
		        android:id="@+id/editComment"
		        android:layout_width="match_parent"
		        android:layout_height="92dp"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/common_inputbox_1_bg"
		        android:ems="10"
		        android:hint="Enter comments"
		        android:gravity="top"
		        android:textColorHint="@color/text_color_hint"
		        android:paddingLeft="13dp" >
		
		      
		    </EditText>
		   
		    <LinearLayout 
		        android:id="@+id/changePasswordWrapper"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_marginTop="20dp"
		        android:layout_marginBottom="20dp"
		        >
		        <LinearLayout 
			         android:layout_width="fill_parent"
			         android:layout_height="1dp"
			         android:background="#dad9d6"
			         android:orientation="vertical"
			         ></LinearLayout>    
		        <RelativeLayout 
		            android:id="@+id/changePasswordFrame"
		            android:layout_width="fill_parent"
		            android:layout_height="46dp"
		            android:background="#f7f6f2"
		            >
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="@string/label_change_pwd"
		                android:textSize="16dp"
		                android:textStyle="bold"
	      				android:textColor="#888888"
	      				android:layout_centerVertical="true"
	      				android:layout_marginLeft="20dp"
		                />
		             <ImageView
	                    android:id="@+id/imageChangePassword"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_alignParentBottom="true"
	                    android:layout_alignParentRight="true"
	                    android:layout_marginBottom="17dp"
	                    android:layout_marginRight="14dp"
	                    android:layout_weight="1"
	                    android:scaleType="center"
	                    android:src="@drawable/settings_list_arrow" />      
		            
		        </RelativeLayout>
		         <LinearLayout 
			         android:layout_width="fill_parent"
			         android:layout_height="1dp"
			         android:background="#dad9d6"
			         android:orientation="vertical"
			         ></LinearLayout>    
			     <RelativeLayout 
	                 android:id="@+id/passwordHiddenFrame"
	                 android:layout_width="fill_parent"
	                 android:layout_height="wrap_content"
	                 android:orientation="vertical"
	                 android:paddingTop="20dp"
	                 android:paddingLeft="20dp"
	                 android:paddingRight="20dp"
	                 android:background="#e8e7e4"
	                 android:visibility="gone"
	                 >
		             <TextView 
		                 android:id="@+id/title1"
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:text="Enter a new password for "
		                 android:textSize="16dp"
		                 android:textStyle="bold"
		                 android:textColor="#505050"
		                 />
			         <TextView 
			             android:id="@+id/txtBigtureId2"
			             android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"
		                 android:textSize="16dp"
		                 android:textStyle="bold"
		                 android:text="AA"
		                 android:textColor="#d34b46"
		                 android:layout_toRightOf="@+id/title1"
		                 android:layout_marginLeft="5dp"
			             />
			         
			         <TextView
				        android:id="@+id/textPassword"
				        android:layout_below="@+id/title1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="16dp"
				        android:text="@string/setting_lb_changepwd_current"
				        android:textSize="16dp"
				        android:textStyle="bold"
				        android:textColor="#888888"
				         />
					
					    <EditText
					        android:id="@+id/editPassword"
					         android:layout_below="@+id/textPassword"
					        android:layout_width="match_parent"
					        android:layout_height="46dp"
					        android:layout_marginTop="10dp"
					        android:background="@drawable/common_inputbox_1_bg"
					        android:ems="10"
					        android:hint="Enter current password"
					        android:inputType="textPassword"
					        android:textColorHint="@color/text_color_hint"
					        android:paddingLeft="13dp" >
					    </EditText>
			          <TextView
				        android:id="@+id/textNewPassword"
				        android:layout_below="@+id/editPassword"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="16dp"
				        android:text="@string/setting_lb_changepwd_new"
				        android:textSize="16dp"
				        android:textStyle="bold"
				        android:textColor="#888888"
				         />
					 <LinearLayout
				        android:id="@+id/passwordBox"
				        android:layout_below="@+id/textNewPassword"
				        android:layout_width="match_parent"
				        android:layout_height="93dp"
				        android:layout_marginTop="10dp"
				        android:padding="0dp"
				        android:background="@drawable/common_inputbox_2_bg"
				        android:orientation="vertical" >
				
				        <EditText
				            android:id="@+id/editPassword1"
				            android:layout_width="match_parent"
				            android:layout_height="46dp"
				            android:layout_marginTop="0dp"
				            android:background="@null"
				            android:ems="10"
				            android:hint="Enter new password"
				            android:textColorHint="@color/text_color_hint"
				            android:inputType="textPassword"
				            android:paddingLeft="13dp" >
				
				          
				        </EditText>
				
				        <EditText
				            android:id="@+id/editPassword2"
				            android:layout_width="match_parent"
				            android:layout_height="46dp"
				            android:layout_marginTop="1dp"
				            android:background="@null"
				            android:ems="10"
				            android:hint="Confirm new password"
				            android:textColorHint="@color/text_color_hint"
				            android:inputType="textPassword"
				            android:paddingLeft="13dp" />
				    </LinearLayout>
				    <Button 
				        android:id="@+id/btnOK"
				        android:layout_width="416dp"
				        android:layout_height="46dp"
				        android:background="@drawable/selector_btn_popup_red"
				        android:layout_below="@+id/passwordBox"
				        android:layout_marginTop="20dp"
				        android:layout_marginBottom="20dp"
				        android:text="OK"
				        android:textSize="16dp"
				        android:textStyle="bold"
				        android:textColor="@color/white"
				        />
				    <LinearLayout 
				         android:layout_width="fill_parent"
				         android:layout_height="1dp"
				         android:background="#dad9d6"
				         android:orientation="vertical"
				         
				         android:layout_alignParentBottom="true"
				         ></LinearLayout>    
		        </RelativeLayout>
		   	 </LinearLayout>
		    <TextView 
		        android:id="@+id/withdrawTxt"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="40dp"
		        android:layout_marginBottom="40dp"
		        android:visibility="gone"
		        android:textSize="16dp"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:text="If you would like to withdraw from bigture,press this text"
		        />

	</LinearLayout>
</ScrollView>