<?xml version="1.0" encoding="utf-8"?>
<com.clockworks.android.tablet.bigture.views.common.CommentCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="12dp" >

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/common_pofile_48x48" />

    <ImageView 
        android:id="@+id/friendMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="12dp"
        android:src='@drawable/common_pofile_friend_mark'
        android:visibility="gone"
        />
    
    <LinearLayout
        android:id="@+id/commentRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageProfile"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/imageProfile"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jobLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Art master"
            android:textColor="@color/list_expert_job"
            android:textSize="14dp" />
		
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
             <TextView
	            android:id="@+id/nameLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:ellipsize="end"
	            android:lines="1"
	            android:maxLines="2"
	            android:text="Linda Loring"
	            android:textSize="18dp"
	            android:textStyle="bold"
	            android:textColor="@color/list_friend_name" />
             
            <TextView 
                android:id="@+id/countryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="USA"
                android:visibility="gone"
                android:textSize="14dp"
                android:textColor="@color/list_friend_name"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/commentContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
		        android:id="@+id/commentLabel"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="TextView"
		        android:textSize="16dp"
		        android:textColor="@color/tab_text_p" />
         
	        <TextView
	            android:id="@+id/dateLabel1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:layout_marginRight="20dp"
	            android:layout_marginBottom="10dp"
	            android:text="TextView"
	            android:textSize="12dp"
	            android:textColor="@color/list_friend_name"
	             />
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/stickerContainer"
            android:layout_width="fill_parent"
            android:layout_height="47dp"
            android:layout_marginTop="4dp"
            >
            <ImageView 
                android:id="@+id/stickerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/artworkspage_talk_list_sticker_icon_love"
                />
         
	        <TextView
	            android:id="@+id/dateLabel2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="right"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="10dp"
	            android:layout_marginRight="20dp"
	            android:text="TextView"
	            android:textSize="12dp"
	            android:textColor="@color/list_friend_name"
	             />
        </RelativeLayout> 

    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cfccc6"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/commentRight"
        >
        
    </LinearLayout>
</com.clockworks.android.tablet.bigture.views.common.CommentCell>