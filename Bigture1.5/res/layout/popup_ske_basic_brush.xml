<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="456dp"
    android:layout_height="157dp"
    android:orientation="vertical"
    android:background="#F5F4F0">
  
         <TextView 
	        android:id="@+id/title"
	        android:layout_width="fill_parent"
	        android:layout_height="44dp"
	        android:text="@string/sketchbook_lb_brush_basic"
	        android:gravity="center"
	        android:textSize="18dp"
	        android:textStyle="bold"
	        android:textColor="#555555"
	        />
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#e8e7e3"        
	        ></LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="112dp"
	        android:padding="12dp"
	        android:orientation="horizontal"
	        >
	        <RelativeLayout 
	            android:id="@+id/btnPenPen"
	            android:layout_width="72dp"
            	android:layout_height="88dp"
            	android:background="@drawable/selector_ske_tool_palette_btn"
	            >
	            <ImageView 
	                android:id="@+id/penImg"
	                android:layout_width="72dp"
	                android:layout_height="72dp"
	                android:src="@drawable/sketchbook_tool_popup_brushtool_icon_pen"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14dp"
	                android:textStyle="bold"
	                android:textColor="#000000"
	                android:text="@string/sketchbook_lb_brush_basic_pen"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="3dp"
	                />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/btnPenBrush"
	            android:layout_width="72dp"
            	android:layout_height="88dp"
            	android:background="@drawable/selector_ske_tool_palette_btn"
	            >
	            <ImageView 
	                android:id="@+id/penImg2"
	                android:layout_width="72dp"
	                android:layout_height="72dp"
	                android:src="@drawable/sketchbook_tool_popup_brushtool_icon_brush"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14dp"
	                android:textStyle="bold"
	                android:textColor="#000000"
	                android:text="@string/sketchbook_lb_brush_basic_brush"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="3dp"
	                />
	        </RelativeLayout>
	      	<RelativeLayout 
	            android:id="@+id/btnPenCrayon"
	            android:layout_width="72dp"
            	android:layout_height="88dp"
            	android:background="@drawable/selector_ske_tool_palette_btn"
	            >
	            <ImageView 
	                android:id="@+id/penImg2"
	                android:layout_width="72dp"
	                android:layout_height="72dp"
	                android:src="@drawable/sketchbook_tool_popup_brushtool_icon_crayon"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14dp"
	                android:textStyle="bold"
	                android:textColor="#000000"
	                android:text="@string/sketchbook_lb_brush_basic_crayon"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="3dp"
	                />
	        </RelativeLayout> 
          
         
           
	    </LinearLayout>
     
</LinearLayout>