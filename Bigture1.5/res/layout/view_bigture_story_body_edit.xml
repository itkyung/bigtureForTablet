<?xml version="1.0" encoding="utf-8"?>
<com.clockworks.android.tablet.bigture.views.story.page.EditBodyPage xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="901dp"
    android:layout_height="633dp" >

    <RelativeLayout
        android:layout_width="901dp"
        android:layout_height="633dp"
        android:background="@drawable/bigturestorypage_book_paper_bg" >
		
         <RelativeLayout
            android:id="@+id/ivImageBg"
            android:layout_width="583dp"
            android:layout_height="402dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="72dp"
            android:layout_marginRight="134dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bigturestorypage_book_paper_image_blank">
        
	          <ImageView
	            android:id="@+id/bgIcon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/bigturestorypage_book_paper_image_blank_icon"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="252dp"
	            android:layout_marginTop="123dp"
	            />
	          <TextView
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:layout_below="@+id/bgIcon"
	              android:layout_centerHorizontal="true"
	              android:layout_marginTop="22dp"
	              android:textSize="24dp"
	              android:textStyle="bold"
	              android:textColor="@color/story_cover_text"
	              android:text="@string/label_story_body_text"
	              android:gravity="center_horizontal"
	              />
	              
          
          </RelativeLayout>
         
       	  <EditText
            android:id="@+id/descLabel"
            android:layout_width="579dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/ivImageBg"
            android:gravity="left"
            android:maxLines="5"
            android:layout_below="@+id/ivImageBg"
            android:hint="Please write your story"
            android:background="@null"
            android:textColorHint="@color/story_page_desc_hint"
            android:textColor="@color/story_page_desc"
            android:textSize="26dp"
            android:textStyle="bold" />
         
       	  <LinearLayout 
       	      android:layout_width="579dp"
       	      android:layout_height="41dp"
       	      android:layout_alignLeft="@+id/ivImageBg"
       	      android:layout_alignParentBottom="true"
       	      android:layout_marginBottom="4dp"
       	      android:background="@drawable/bigturestorypage_book_paper_text_scroll_pattern"
       	      ></LinearLayout>

       	   <Button 
	            android:id="@+id/addPageBtn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bigturestorypage_book_page_icon_add"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentBottom="true"
	            android:layout_marginRight="17dp"
	            android:layout_marginBottom="12dp"
	            />
         <Button 
            android:id="@+id/rightArrowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_story_right"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="33dp"
            android:layout_marginTop="285dp"
            />
       	   
          <Button 
            android:id="@+id/leftArrowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_story_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="285dp"
            />
    </RelativeLayout>
</com.clockworks.android.tablet.bigture.views.story.page.EditBodyPage>