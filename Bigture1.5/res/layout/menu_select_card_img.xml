<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        
        android:background="@color/transparent"
        android:orientation="vertical" >
		
        <LinearLayout
		    android:id="@+id/imageView2"
		    android:layout_width="226dp"
		    android:layout_height="14dp"
		    android:orientation="vertical"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:background="@drawable/common_select_popup_btn_shadow_top_n">
		     <ImageView
			    android:id="@+id/topArrow"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:src="@drawable/common_select_popup_head_upside" />
		</LinearLayout>
           
				
		<Button 
		    android:id="@+id/btnDraw"
		    android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popup_button_top"
            android:text="Try draw now"
            android:textSize="16dp"
            android:textColor="@color/color_popup_menu_text"
		    />
		<LinearLayout 
		     android:layout_width="226dp"
		     android:layout_height="1dp"
		     android:background="@color/popup_menu_divider"
		    ></LinearLayout>
		<Button 
		     android:id="@+id/btnSelectArtwork"
		    android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popup_button_bottom"
            android:text="Select from my artworks"
            android:textSize="16dp"
            android:textColor="@color/color_popup_menu_text"
		    />
       <LinearLayout
		    android:id="@+id/imageView3"
		    android:layout_width="226dp"
		    android:layout_height="14dp"
		    android:orientation="vertical"
		    android:gravity="right"
		    android:background="@drawable/common_select_popup_btn_shadow_bottom_n">
           <ImageView
			    android:id="@+id/bottomArrow"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:layout_marginRight="30dp"
			    android:src="@drawable/common_select_popup_head_dwside" />
       </LinearLayout>
    </LinearLayout>

</LinearLayout>
