<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

      <LinearLayout
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical" >
		
        <RelativeLayout
		    android:id="@+id/imageView2"
		    android:layout_width="216dp"
		    android:layout_height="14dp"
		    android:orientation="vertical"
		    android:background="@drawable/common_select_popup_btn_shadow_top_n">
		     <ImageView
			    android:id="@+id/topArrow"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="80dp"
			    android:src="@drawable/common_select_popup_head_upside" />
		</RelativeLayout>
		<Button 
		    android:id="@+id/menuTakePhoto"
		    android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popup_button_top"
            android:text="Take a Picture"
            android:textSize="16dp"
            android:textColor="@color/color_popup_menu_text"
		    />
		<LinearLayout 
		     android:layout_width="210dp"
		     android:layout_height="1dp"
		     android:layout_gravity="center_horizontal"
		     android:background="@color/popup_menu_divider"
		    ></LinearLayout>
		<Button 
		    android:id="@+id/menuSelectGallery"
		    android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popup_button_middle"
            android:text="From Gallery"
            android:textSize="16dp"
            android:textColor="@color/color_popup_menu_text"
		    />
		<LinearLayout 
		     android:layout_width="210dp"
		     android:layout_height="1dp"
		     android:background="@color/popup_menu_divider"
		     android:layout_gravity="center_horizontal"
		    ></LinearLayout>	
		<Button 
		    android:id="@+id/menuMyArtworks"
		    android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popup_button_middle"
            android:text="Select from My artworks"
            android:textSize="16dp"
            android:textColor="@color/color_popup_menu_text"
		    />
		<LinearLayout 
		     android:layout_width="210dp"
		     android:layout_height="1dp"
		     android:background="@color/popup_menu_divider"
		     android:layout_gravity="center_horizontal"
		    ></LinearLayout>	
		<Button 
		    android:id="@+id/menuFromStory"
		    android:layout_width="226dp"
		    android:visibility="gone"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popup_button_middle"
            android:text="Select from This story"
            android:textSize="16dp"
            android:textColor="@color/color_popup_menu_text"
		    />		
		<LinearLayout 
		     android:layout_width="210dp"
		     android:layout_height="1dp"
		     android:visibility="gone"
		     android:background="@color/popup_menu_divider"
		     android:layout_gravity="center_horizontal"
		    ></LinearLayout>				    	
  		<Button 
		     android:id="@+id/menuRecentArtworks"
		    android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popup_button_bottom"
            android:text="Recent artworks"
            android:textSize="16dp"
            android:textColor="@color/color_popup_menu_text"
		    />
 		<LinearLayout
		    android:id="@+id/imageView3"
		    android:layout_width="216dp"
		    android:layout_height="14dp"
		    android:orientation="vertical"
		    android:gravity="right"
		    android:background="@drawable/common_select_popup_btn_shadow_bottom_n">
          
       </LinearLayout>
    </LinearLayout>

</LinearLayout>
