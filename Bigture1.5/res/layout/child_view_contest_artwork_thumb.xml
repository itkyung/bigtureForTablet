<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="297dp"
    android:layout_height="253dp"
    android:background="@drawable/common_artwork_bg"
	android:padding="0dp"
     >
	
        <ImageView
            android:id="@+id/imageArtwork"
            android:layout_width="290dp"
            android:layout_height="197dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageArtwork"
            android:layout_below="@+id/imageArtwork"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:text="TextView"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/list_friend_name" />
        <TextView
            android:id="@+id/ownerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/titleLabel"
            android:layout_below="@+id/titleLabel"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:text="TextView"
            android:textSize="12dp"
             android:textStyle="bold"
             android:textColor="@color/tab_text_p" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageArtwork"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" />
  		
         <ImageButton
            android:id="@+id/collectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@null"
            android:src="@drawable/selector_collection"
           />


</RelativeLayout>