<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="540dp"
    android:layout_height="300dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="54dp"
        android:background="#d7d6d1"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:paddingTop="20dp"
         >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imageShareIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sketchbook_func_share_popup_icon_artworks" />

            <TextView
                android:id="@+id/shareTargetLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/menu_artworks"
                android:textColor="#505050"
                android:textSize="20dp" />

        </LinearLayout>

         <ImageView
            android:id="@+id/imageArtwork"
            android:layout_width="126dp"
            android:layout_height="93dp"
            android:layout_below="@+id/editTitle"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:background="#ffffff"/>
        
        
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="@string/common_ph_title"
            android:lines="1"
            android:textColorHint="#aaaaaa"
            android:textSize="16dp"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true" >

        </EditText>
       
        <EditText
            android:id="@+id/editDesc"
            android:layout_width="fill_parent"
            android:layout_height="93dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/imageArtwork"
            android:layout_below="@+id/editTitle"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:gravity="top|left"
            android:hint="@string/sketchbook_ph_tell_about_artwork"
            android:maxLength="200"
            android:textColorHint="#aaaaaa"
            android:textSize="16dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:background="@drawable/common_popup_navigation_bg_pattern" >

       <Button
            android:id="@+id/btnCancel"
            android:layout_width="69dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:background="@drawable/selector_btn_popup"
            android:paddingLeft="10dp"
            android:text="@string/common_btn_cancel"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffffff" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_btn_popup_red"
            android:text="@string/sketchbook_btn_share"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/sketchbook_lb_share_bigture"
            android:textSize="18dp"
            android:textColor="#717880"
            android:textStyle="bold" />

    </RelativeLayout>
	<LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="3dp"
	     android:layout_marginTop="54dp"
	     android:background="@drawable/common_popup_navigation_shadow_pattern"/>
    
</FrameLayout>