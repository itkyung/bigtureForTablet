<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="456dp"
    android:layout_height="358dp"
    android:orientation="vertical"
    android:background="#F5F4F0">
  
         <TextView 
	        android:id="@+id/title"
	        android:layout_width="fill_parent"
	        android:layout_height="44dp"
	        android:text="@string/sketchbook_lb_bg"
	        android:gravity="center"
	        android:textSize="18dp"
	        android:textStyle="bold"
	        android:textColor="#555555"
	        />
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#e8e7e3"        
	        ></LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="112dp"
	        android:paddingTop="12dp"
	        android:paddingBottom="12dp"
	        android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:orientation="horizontal"
	        >
	        <RelativeLayout 
	            android:id="@+id/btnCamera"
	            android:layout_width="72dp"
            	android:layout_height="88dp"
            	android:background="@drawable/selector_ske_tool_palette_btn"
	            >
	            <ImageView 
	         
	                android:layout_width="72dp"
	                android:layout_height="72dp"
	                android:src="@drawable/sketchbook_tool_popup_bgtool_icon_camera"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14dp"
	                android:textStyle="bold"
	                android:textColor="#000000"
	                android:text="@string/sketchbook_lb_bg_camera"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="3dp"
	                />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/btnAlbum"
	            android:layout_width="72dp"
            	android:layout_height="88dp"
            	android:background="@drawable/selector_ske_tool_palette_btn"
	            >
	            <ImageView 
	                android:layout_width="72dp"
	                android:layout_height="72dp"
	                android:src="@drawable/sketchbook_tool_popup_bgtool_icon_album"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14dp"
	                android:textStyle="bold"
	                android:textColor="#000000"
	                android:text="@string/sketchbook_lb_bg_album"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="3dp"
	                />
	        </RelativeLayout>
	        <RelativeLayout 
	            android:id="@+id/btnBucket"
	            android:layout_width="72dp"
            	android:layout_height="88dp"
            	android:background="@drawable/selector_ske_tool_palette_btn"
	            >
	            <ImageView 
	                android:layout_width="72dp"
	                android:layout_height="72dp"
	                android:src="@drawable/sketchbook_tool_popup_bgtool_icon_bucket"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="14dp"
	                android:textStyle="bold"
	                android:textColor="#000000"
	                android:text="@string/sketchbook_lb_bg_paint"
	                android:layout_centerHorizontal="true"
	                android:layout_alignParentBottom="true"
	                android:layout_marginBottom="3dp"
	                />
	        </RelativeLayout>
	        
	           
 			          
	    </LinearLayout>
     	<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#e8e7e3"        
	        ></LinearLayout>
     	<FrameLayout 
     	    android:layout_width="fill_parent"
     	    android:layout_height="wrap_content"
     	    >
     	    <LinearLayout 
     	        android:id="@+id/bucketExtra"
     	        android:layout_width="fill_parent"
     	        android:layout_height="wrap_content"
     	        android:orientation="horizontal"
     	        android:paddingTop="12dp"
     	        android:paddingLeft="12dp"
     	        android:paddingRight="12dp"
     	        android:visibility="gone"
     	        >
	            <RelativeLayout 
		            android:id="@+id/btnBucketPlain"
		            android:layout_width="72dp"
	            	android:layout_height="88dp"
	            	android:background="@drawable/selector_ske_tool_palette_btn"
		            >
		            <ImageView 
		                android:layout_width="72dp"
		                android:layout_height="72dp"
		                android:src="@drawable/sketchbook_tool_popup_painttool_icon_plain"
		                />
		            <TextView 
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14dp"
		                android:textStyle="bold"
		                android:textColor="#000000"
		                android:text="@string/sketchbook_lb_area_paint_plain"
		                android:layout_centerHorizontal="true"
		                android:layout_alignParentBottom="true"
		                android:layout_marginBottom="3dp"
		                />
		        </RelativeLayout>
		        
     	        
     	    </LinearLayout>
     	  
     	</FrameLayout>
     
</LinearLayout>