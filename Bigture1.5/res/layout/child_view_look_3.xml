<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:padding="0dp"
     >
     <ImageView 
         android:id="@+id/imgArtwork"
         android:layout_width="136dp"
         android:layout_height="126dp"
         android:src="@drawable/infocenter_look_icons_story"
         android:layout_gravity="center_horizontal"
         android:layout_centerHorizontal="true"
         />
     <TextView 
         android:id="@+id/title"
         android:layout_below="@+id/imgArtwork"
         android:layout_width="fill_parent"
         android:layout_height="42dp"
         android:text="@string/common_lb_menu_artstory"
         android:layout_marginTop="34dp"
         android:textSize="20dp"
         android:textStyle="bold"
         android:textColor="#d7483c"
         android:gravity="top|center_horizontal"
         />
     <TextView 
         android:layout_below="@+id/title"
         android:id="@+id/lookText"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="24dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:textSize="15dp"
         android:text="@string/info_guide_04_title"
         android:lineSpacingExtra="5dp"
         android:textColor="#555555"
         android:gravity="top|center_horizontal"
         />
    
    
     
     
     
</RelativeLayout>