<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="1016dp"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingBottom="20dp"
    android:orientation="vertical" >
    
     <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class info"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/popup_list_title"
            />

	     <LinearLayout 
	         android:layout_width="match_parent"
	         android:layout_height="173dp"
	         android:orientation="horizontal"
	         android:layout_marginTop="12dp"     
	         >
	         <FrameLayout 
	             android:id="@+id/coverImgWrapper"
	             android:layout_width="245dp"
	             android:layout_height="173dp"
	             android:background="@drawable/artclass_popup_add_cover_bg"
	             >
	              <TextView 
	                 android:layout_gravity="center_horizontal"
	                 android:layout_marginTop="100dp"
	                 android:layout_width="205dp"
	                 android:layout_height="wrap_content"
	                 android:maxLines="3"
	                 android:textSize="14dp"
	                 android:textColor="@color/artclass_cover_bg_text"
	                 android:text="@string/label_artclass_cover_txt"
	                 />
	             
	             <ImageView 
		             android:id="@+id/coverImg"
		             android:layout_width="245dp"
		             android:layout_height="173dp"
		             android:scaleType="centerCrop"
		             
		             />
	            
	         </FrameLayout>
	         
	          <LinearLayout
		         android:layout_marginLeft="30dp"
		         android:layout_width="fill_parent"
		         android:layout_height="173dp"
		         android:orientation="vertical"
		         >
	             <LinearLayout
			         android:layout_width="match_parent"
			         android:layout_height="46dp"
			         android:background="@drawable/common_inputbox_1_bg"
			         android:padding="13dp" >
			
			         <EditText
			             android:id="@+id/editClassName"
			             android:layout_marginLeft="13dp"
			             android:layout_width="0dip"
			             android:layout_height="match_parent"
			             android:layout_weight="1"
			             android:background="@null"
			             android:ems="10"
			             android:hint="Create a class name."
			              android:textColorHint="@color/text_color_hint"
			             android:imeOptions="actionDone"
			             android:maxLength="20"
			             android:inputType="textShortMessage"
			             android:maxLines="1"
			             android:textSize="16dp" >
			         </EditText>
			     </LinearLayout>
	              <LinearLayout
			         android:layout_width="match_parent"
			         android:layout_height="117dp"
			         android:layout_marginTop="12dp"
			         android:background="@drawable/common_inputbox_1_bg"
			         android:padding="13dp" >
			
			         <EditText
			             android:id="@+id/editClassDesc"
			             android:layout_marginLeft="13dp"
			             android:layout_width="0dip"
			             android:layout_height="match_parent"
			             android:layout_weight="1"
			             android:background="@null"
			             android:ems="10"
			             android:hint="What kind of class is it?\nPlease write an class description."
			             android:imeOptions="actionDone"
			             android:maxLength="1000"
			             android:maxLines="5"
			             android:textColorHint="@color/text_color_hint"
			             android:textSize="16dp" >
			         </EditText>
			     </LinearLayout> 
	              
	           </LinearLayout>
	     </LinearLayout>
	     <LinearLayout 
	         android:layout_width="fill_parent"
	         android:layout_height="1dp"
	         android:layout_marginTop="20dp"
	         android:layout_marginBottom="20dp"
	         android:background="@color/edit_popup_divider"
	         ></LinearLayout> 
	      
	      <RelativeLayout 
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          >
	          
		      <TextView 
		          android:id="@+id/classTypeTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Class type"
	            android:textSize="18dp"
	            android:textStyle="bold"
	            android:textColor="@color/popup_list_title"
	            />
		       <LinearLayout 
	               android:layout_below="@+id/classTypeTitle"
		          android:layout_width="568dp"
		          android:layout_height="wrap_content" 
		          android:layout_marginTop="12dp"
		          android:orientation="horizontal"
		          >
		           <RelativeLayout 
		           		android:id="@+id/classTypeNormal"
				   	    android:layout_width="259dp"
				   	    android:layout_height="334dp"
				   	    android:background="@drawable/selector_common_radio"
	 					android:paddingLeft="18dp"
	 			   	    android:paddingRight="18dp"
				   	    android:paddingTop="19dp"
				   	    android:paddingBottom="19dp"
		           >
		              <ImageView 
		                  android:id="@+id/normalImg"
		                  android:layout_width="wrap_content"
		                  android:layout_height="wrap_content"
		                  android:src="@drawable/artclass_popup_add_type_normal_icon"
		                  />
		               
		              <TextView 
		                  android:id="@+id/normalTitle"
		                  android:layout_width="wrap_content"
		                  android:layout_height="wrap_content"
		                  android:layout_below="@+id/normalImg"
		                  android:layout_marginTop="10dp"
		                  android:text="Normal type"
		                  android:textSize="20dp"
		                  android:textStyle="bold"
		                  android:textColor="@color/context_menu_color"
		                  />
		               <TextView 
		                  android:layout_width="fill_parent"
		                  android:layout_height="wrap_content"
		                  android:text="individual Each student draw freely on their own,and upload the artwork."
		                  android:textSize="16dp"
		                  android:layout_below="@+id/normalTitle"
		                  android:layout_marginTop="10dp"
		                  android:textColor="@color/context_menu_color"
		                  />
		               
		           </RelativeLayout>
		          <RelativeLayout 
		           		android:id="@+id/classTypePuzzle"
		           		android:layout_marginLeft="20dp"
				   	    android:layout_width="259dp"
				   	     android:layout_height="334dp"
				   	    android:paddingLeft="18dp"
	 			   	    android:paddingRight="18dp"
				   	    android:paddingTop="19dp"
				   	    android:paddingBottom="19dp"
				   	    android:background="@drawable/selector_common_radio"
		           >  
		            	<ImageView 
		                  android:id="@+id/puzzleImg"
		                  android:layout_width="wrap_content"
		                  android:layout_height="wrap_content"
		                  android:src="@drawable/artclass_popup_add_type_puzzle_icon"
		                  />
		              
		            	<TextView 
		            	    android:id="@+id/puzzleTitle"
		                  android:layout_width="wrap_content"
		                  android:layout_height="26dp"
		                   android:layout_below="@+id/puzzleImg"
		                   android:layout_marginTop="10dp"
		                  android:text="Puzzle type"
		                  android:gravity="center"
		                  android:textSize="20dp"
		                  android:textStyle="bold"
		                  android:textColor="@color/context_menu_color"
		                  />
		               <TextView 
		                  android:layout_width="fill_parent"
		                  android:layout_height="wrap_content"
		                  android:text="Many Students gather to create a single collaborative drawing."
		                  android:textSize="16dp"
		                  android:layout_below="@+id/puzzleTitle"
		                 
		                  android:layout_marginTop="10dp"
		                  android:textColor="@color/context_menu_color"
		                  />
		           </RelativeLayout>
		          
		      </LinearLayout>
		       <LinearLayout 
		           android:layout_width="1dp"
		           android:layout_height="fill_parent"
		           android:layout_toLeftOf="@+id/classShareWrapper"
		           android:background="@color/edit_popup_divider"
		           >
		       </LinearLayout>   
	           <LinearLayout 
	               android:id="@+id/classShareWrapper"
	               android:layout_width="387dp"
	               android:layout_height="wrap_content"
	               android:orientation="vertical"
	               android:layout_alignParentRight="true"
	               android:paddingLeft="30dp"
	               >
	                <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="Share option"
			            android:textSize="18dp"
			            android:textStyle="bold"
			            android:textColor="@color/popup_list_title"
			            />
	                 <TextView 
	                     android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="5dp"
			            android:text="클래스 생성후 변경 할 수 없으니 잘 선택 해 주세요."
			            android:textSize="14dp"
			            android:textColor="@color/popup_list_title"
	                     />
	               	<LinearLayout 
	               	    android:id="@+id/classPublic"
	               	    android:layout_width="356dp"
	               	    android:layout_height="46dp"
	               	    android:layout_marginTop="10dp"
	               	    android:background="@drawable/selector_class_public"
	               	    android:orientation="vertical"
	               	    >
	               	    <TextView 
	               	        android:layout_width="wrap_content"
	               	        android:layout_height="fill_parent"
	               	        android:layout_gravity="center_vertical"
	               	        android:gravity="center_vertical|left"
	               	        android:layout_marginLeft="44dp"
	               	        android:text="모든 회원에게 공개"
	               	        android:textSize="16dp"
	               	        android:textColor="@color/popup_menu_text"
	               	        />
	               	    
	               	</LinearLayout>
	                 <LinearLayout 
	               	    android:id="@+id/classPrivate"
	               	    android:layout_width="356dp"
	               	    android:layout_height="46dp"
	               	    android:layout_marginTop="10dp"
	               	    android:background="@drawable/selector_class_private"
	               	    android:orientation="vertical"
	               	    >
	               	    <TextView 
	               	        android:layout_width="wrap_content"
	               	        android:layout_height="fill_parent"
	               	        android:layout_gravity="center_vertical"
	               	        android:gravity="center_vertical|left"
	               	        android:layout_marginLeft="44dp"
	               	        android:text="지정 친구에게만 공개"
	               	        android:textSize="16dp"
	               	        android:textColor="@color/popup_menu_text"
	               	        />
	               	    
	               	</LinearLayout>
	               
	               
	           </LinearLayout>
		      <LinearLayout 
		          android:id="@+id/rightDivider"
		           android:layout_width="387dp"
		           android:layout_height="1dp"
		           android:background="@color/edit_popup_divider"
		           android:layout_below="@+id/classShareWrapper"
		           android:layout_alignParentRight="true"
		           android:layout_marginTop="30dp"
		           android:layout_marginBottom="30dp"
		           android:orientation="vertical"
		           >
		       </LinearLayout>  
	           <LinearLayout 
	               android:layout_width="387dp"
	               android:layout_height="wrap_content"
	               android:orientation="vertical"
	               android:layout_alignParentRight="true"
	               android:layout_below="@+id/rightDivider"
	               android:paddingLeft="30dp"
	               >
		      		 <TextView 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="기간"
			            android:textSize="18dp"
			            android:textStyle="bold"
			            android:textColor="@color/popup_list_title"
			            />
		      			
		      		   <LinearLayout
				            android:id="@+id/linearLayout1"
				            android:layout_width="fill_parent"
				            android:layout_height="93dp"
				            android:layout_marginTop="20dp"
				            android:background="@drawable/common_inputbox_2_bg"
				            android:padding="0dp"
				            android:orientation="vertical" >
				
				            <RelativeLayout
				                android:layout_width="match_parent"
				                android:layout_height="45dp" >
				
				                <TextView
				                    android:id="@+id/textView1"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:layout_alignParentLeft="true"
				                    android:layout_centerVertical="true"
				                    android:layout_marginLeft="13dp"
				                    android:text="Start"
				                    android:textColor="@color/black"
				                    android:textSize="16dp"
				                    android:textStyle="bold" />
				
				                <TextView
				                    android:id="@+id/startDateLabel"
				                    android:layout_width="200dp"
				                    android:layout_height="wrap_content"
				                    android:layout_alignParentRight="true"
				                    android:gravity="right"
				                    android:layout_marginRight="13dp"
				                    android:layout_centerVertical="true"
				                    android:text="2013.02.12"
				                    android:textColor="@color/popup_menu_text"
				                    android:textSize="16dp" />
				
				              
				            </RelativeLayout>
				
				            <RelativeLayout
				                android:layout_width="match_parent"
				                android:layout_height="45dp"
				                android:layout_marginTop="1dp" >
				
				                <TextView
				                    android:id="@+id/textView2"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:layout_alignParentLeft="true"
				                    android:layout_centerVertical="true"
				                    android:layout_marginLeft="13dp"
				                    android:text="End"
				                    android:textColor="@color/black"
				                    android:textSize="16dp"
				                    android:textStyle="bold" />
				
				                <TextView
				                    android:id="@+id/endDateLabel"
				                    android:layout_width="200dp"
				                    android:layout_height="wrap_content"
				                    android:layout_centerVertical="true"
									android:layout_marginRight="13dp"
				                    android:layout_alignParentRight="true"
				                    android:text="0000.0.0."
				                    android:gravity="right"
				                    android:textColor="@color/popup_menu_text"
				                    android:textSize="16dp" />
				
				              
				            </RelativeLayout>
				        </LinearLayout>
		      </LinearLayout>
		      
	       </RelativeLayout>
	     
	       
    
    
 </LinearLayout>