<?xml version="1.0" encoding="utf-8"?>
<com.clockworks.android.tablet.bigture.views.story.page.StoryThumbnail xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="583dp"
    android:layout_height="402dp"
    android:background="@drawable/bigturestorypage_book_paper_image_blank"
     >

    <ImageView
        android:id="@+id/imageArtwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="17dp"
        android:src="@drawable/artworkspage_image_profile_bg" />

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="5dp"
        android:layout_marginRight="9dp"
        android:src="@drawable/artworkspage_image_profile_photo_default" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_toRightOf="@+id/imageView1"
        android:textColor="#ffffffff"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:textStyle="bold"
        android:text="by Bucky song"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="22dp"
        android:text="1/5"
        android:textColor="#ffffffff"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:textSize="20dp"
        android:textStyle="bold" />

</com.clockworks.android.tablet.bigture.views.story.page.StoryThumbnail>
