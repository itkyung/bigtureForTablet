<?xml version="1.0" encoding="utf-8"?>
<com.clockworks.android.tablet.bigture.views.artclass.ClassCell xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false" >

    <LinearLayout
        android:id="@+id/classContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:paddingTop="0dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.clockworks.android.tablet.bigture.views.artclass.ClassThumbnail
                android:id="@+id/class1"
                android:layout_width="282dp"
                android:layout_height="305dp"
                android:layout_gravity="center_horizontal"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/vwAdd"
                android:layout_width="282dp"
                android:layout_height="305dp"
                android:background="@drawable/artclass_list_canvas_bg"
                android:clickable="true"
                android:visibility="gone" >
				
                 <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="86dp"
                    android:src="@drawable/common_addpage_icon" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26dp"
                    android:text="Add my Class"
                    android:textColor="#ffcc0000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.clockworks.android.tablet.bigture.views.artclass.ClassThumbnail
                android:id="@+id/class2"
                android:layout_width="282dp"
                android:layout_height="305dp" 
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.clockworks.android.tablet.bigture.views.artclass.ClassThumbnail
                android:id="@+id/class3"
                android:layout_width="282dp"
                android:layout_height="305dp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.clockworks.android.tablet.bigture.views.artclass.ClassThumbnail
                android:id="@+id/class4"
                android:layout_width="282dp"
                android:layout_height="305dp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>


</com.clockworks.android.tablet.bigture.views.artclass.ClassCell>