<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="764dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/common_popup_navigation_bg" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Add My News"
            android:textColor="@color/popup_title"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_btn_popup"
            android:minHeight="38dp"
            android:text="Cancel"
            android:textSize="16dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_btn_popup"
            android:minHeight="38dp"
            android:text="OK"
            android:textSize="16dp"
            android:textColor="@color/white" />

    </RelativeLayout>
	<LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="56dp"
	     android:background="@drawable/common_popup_navigation_shadow_pattern"/>
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_popup_bg"
         android:layout_marginTop="56dp"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp" >
	
	        <EditText
	            android:id="@+id/editTitle"
	            android:layout_width="635dp"
	            android:layout_height="46dp"
	            android:background="@drawable/common_inputbox_1_bg"
	            android:gravity="top|left"
	            android:hint="Put a title here."
	            android:padding="13dp"
	            android:textColor="@color/gray"
	            android:textSize="16dp" />
	        
	        <Button 
	            android:id="@+id/btnPicture"
	            android:layout_width="59dp"
	            android:layout_height="46dp"
	            android:background="@drawable/selector_btn_picture"
	            android:layout_toRightOf="@+id/editTitle"
	            android:layout_marginLeft="12dp"
	            />
			
	        <EditText
	            android:id="@+id/editContent"
	            android:layout_width="704dp"
	            android:layout_height="127dp"
	            android:layout_marginTop="10dp"
	            android:layout_below="@+id/editTitle"
	            android:background="@drawable/inputbox"
	            android:gravity="top|left"
	            android:hint="Tell your friends about your news."
	            android:padding="13dp"
	            android:textColor="@color/gray"
	            android:textSize="16dp" />
	
        
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="704dp"
            android:layout_height="115dp"
            android:layout_below="@+id/editContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:visibility="gone"
             >

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            </LinearLayout>
        </HorizontalScrollView>
        
        <TextView
            android:id="@+id/noimageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:text="No Image. Post a Picture."
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>