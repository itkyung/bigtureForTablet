<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="326dp"
    android:layout_height="127dp"
    android:orientation="vertical"
    android:background="#F5F4F0">
         <TextView 
	        android:id="@+id/title"
	        android:layout_width="fill_parent"
	        android:layout_height="44dp"
	        android:text="@string/sketchbook_lb_brush_size"
	        android:gravity="center"
	        android:textSize="18dp"
	        android:textStyle="bold"
	        android:textColor="#555555"
	        />
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="1dp"
	        android:background="#e8e7e3"        
	        ></LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="82dp"
	        android:paddingLeft="22dp"
	        android:paddingRight="22dp"
	        android:orientation="horizontal"
	        >
	         <RelativeLayout 
	             android:layout_width="50dp"
	             android:layout_height="50dp"
	             android:background="@drawable/ske_brush_bg"
	             android:layout_marginTop="16dp"
	             >

	             <ImageView android:id="@+id/brushSizeImg"
	                 android:layout_width="5dp"
	                 android:layout_height="5dp"
	                 android:layout_centerInParent="true"
	                 android:src="@drawable/ske_brush"
	                  />
	             
	         </RelativeLayout> 
	        
	         <SeekBar
               android:id="@+id/seekBar1"
               android:layout_width="202dp"
               android:layout_height="30dp"
               android:layout_marginTop="26dp"
               android:layout_marginLeft="22dp"
               android:max="100"
			   android:progress="4"
			   android:indeterminateDrawable="@drawable/ske_brush_seekbar"
               android:progressDrawable="@drawable/ske_brush_seekbar"
               android:thumb="@drawable/sketchbook_tool_popup_brushsize_btn" />
	    </LinearLayout>
  
</LinearLayout>