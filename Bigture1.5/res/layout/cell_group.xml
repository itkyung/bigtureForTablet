<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="52dp"
	android:padding="0dp"
    >
        
   <FrameLayout 
       android:id="@+id/groupCellActionWrapper"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical"
       >
        <Button
	        android:id="@+id/btnGroupRemoveStep1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/selector_remove_group"
	        android:layout_marginRight="20dp"
	        android:visibility="gone" />
       
        <Button
	        android:id="@+id/btnGroupRemoveStep2"
	        android:layout_width="70dp"
	        android:layout_height="52dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/selector_btn_friend_remove"
	        android:text="Delete"
	        android:textColor="@color/white"
	        android:textSize="16dp"
	        android:layout_marginRight="20dp"
	        android:visibility="gone" />
   </FrameLayout>
   
   <TextView 
       android:id="@+id/groupTitleLabel"
       android:layout_width="wrap_content"
       android:layout_height="52dp"
       android:layout_gravity="center_vertical"
       android:layout_toRightOf="@+id/groupCellActionWrapper"
       android:gravity="center_vertical"
       android:text="Group"
       android:textSize="18dp"
       android:textStyle="bold"
       android:textColor="@color/account_popup_text_color"
       />
    
    
    <Button
        android:id="@+id/btnGroupSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
    
        android:background="@drawable/common_left_arrow"
        android:visibility="visible" />
	
    <Button
        android:id="@+id/btnGroupRemove"
        android:layout_width="52dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selector_btn_friend_remove"
        android:text="Delete"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone" />
    
    
</RelativeLayout>
