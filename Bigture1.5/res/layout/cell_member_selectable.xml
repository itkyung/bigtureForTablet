<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    >

    <FrameLayout 
        android:id="@+id/cellActionArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        >
		  <Button
	        android:id="@+id/btnFriendSelect"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/common_member_list_checkbox_long_p"
	        android:visibility="visible" />     
	      
		   <Button
	        android:id="@+id/btnRemoveStep1"
	        android:layout_width="52dp"
	        android:layout_height="88dp"
	        android:layout_marginRight="16dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/common_member_list_btn_except_long"
	        android:visibility="gone" />
		  
           <Button
	        android:id="@+id/btnRemoveStep2"
	        android:layout_width="88dp"
	        android:layout_height="88dp"
	        android:layout_marginRight="16dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/selector_btn_friend_remove"
	        android:text="Except"
	        android:textColor="@color/white"
	        android:textSize="16dp"
	        android:visibility="gone" />
		
    </FrameLayout>
	  
	  
    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/cellActionArea"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/common_pofile_48x48" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/imageProfile"
        android:gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageProfile"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/jobTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job"
            android:textSize="14dp"
            android:textColor="@color/list_expert_job"
            android:visibility="visible"
            />
        
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="top"
		    android:orientation="horizontal">
		    <TextView
	            android:id="@+id/nameLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="TextView"
	            android:textSize="18dp"
	            android:textColor="@color/list_friend_name"
	            android:textStyle="bold" />

	        <TextView
	            android:id="@+id/countryLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="TextView"
	            android:textSize="14dp"
	            android:layout_marginLeft="5dp"
	            android:textColor="@color/list_friend_name"
	             />
		</LinearLayout>

    </LinearLayout>
	
    
</RelativeLayout>
