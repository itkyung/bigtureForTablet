<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:padding="0dp"
    android:background="@drawable/titlebar_bg_pattern" >

    <com.clockworks.android.tablet.bigture.views.common.TouchableImageView
        android:id="@+id/imageHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="false"
        android:src="@drawable/common_navigationbar_btn_main" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageHome"
        android:src="@drawable/common_navigationbar_divider" />

    <com.clockworks.android.tablet.bigture.views.common.TouchableImageView
        android:id="@+id/imageBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView1"
        android:src="@drawable/common_navigationbar_btn_back" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageBack"
        android:src="@drawable/common_navigationbar_divider" />
    
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Artworks"
        android:textColor="@android:color/white"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/textMsgCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/common_navigationbar_btn_notice"
            android:gravity="center"
            android:lines="1"
            android:paddingBottom="5dp"
            android:text="24"
            android:textColor="#ffff0000"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/imageVline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/common_navigationbar_divider" />

        <com.clockworks.android.tablet.bigture.views.common.TouchableImageView
            android:id="@+id/imageDraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_navigationbar_btn_book" />

    </LinearLayout>

</RelativeLayout>