<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="364dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
	android:paddingRight="24dp">
    
    <RelativeLayout 
        android:layout_width="336dp"
        android:layout_height="188dp"
        android:background="@drawable/bigturestorypage_book_namecard_bg"
        >
        <TextView 
            android:id="@+id/writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/story_lb_writer"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="19dp"
            />
        <ImageView 
            android:id="@+id/writerProfile"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/common_pofile_82x82"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="22dp"
            />
        <TextView android:id="@+id/writerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
        	android:textSize="20dp"
        	android:textStyle="bold"
        	android:textColor="#786e5a"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentBottom="true"
        	android:layout_marginLeft="20dp"
        	android:layout_marginBottom="18dp"/>
        
         <TextView android:id="@+id/writerJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job"
        	android:textSize="14dp"
        	android:textColor="#d34b46"
        	android:layout_alignLeft="@+id/writerName"
        	android:layout_above="@+id/writerName"
        	android:layout_marginBottom="5dp"/>
         
         <ImageView 
             android:id="@+id/writerLocIcon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/mybigture_infoarea_country_icon"
             android:layout_toRightOf="@+id/writerName"
             android:layout_alignParentBottom="true"
             android:layout_marginLeft="11dp"
             android:layout_marginBottom="17dp"
             />
         
        
         <TextView android:id="@+id/writerCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USA"
        	android:textSize="18dp"
        	android:textColor="#888888"
        	android:layout_toRightOf="@+id/writerLocIcon"
        	 android:layout_alignParentBottom="true"
        	android:layout_marginBottom="22dp"/>         
         
    </RelativeLayout>
        
    <RelativeLayout 
        android:id="@+id/illustratorFrame"
        android:layout_marginTop="8dp"
       android:layout_width="336dp"
        android:layout_height="188dp"
        android:background="@drawable/bigturestorypage_book_namecard_bg"
        >
        <TextView 
            android:id="@+id/illustrator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illustrator"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="19dp"
            />
        <ImageView 
            android:id="@+id/illustratorProfile"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/common_pofile_82x82"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="22dp"
            />
        <TextView android:id="@+id/illustratorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
        	android:textSize="20dp"
        	android:textStyle="bold"
        	android:textColor="#786e5a"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentBottom="true"
        	android:layout_marginLeft="20dp"
        	android:layout_marginBottom="18dp"/>
        
         <TextView android:id="@+id/illustratorJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job"
        	android:textSize="14dp"
        	android:textColor="#d34b46"
        	android:layout_alignLeft="@+id/illustratorName"
        	android:layout_above="@+id/illustratorName"
        	android:layout_marginBottom="5dp"/>
         
         <ImageView 
             android:id="@+id/illustratorIcon"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/mybigture_infoarea_country_icon"
             android:layout_toRightOf="@+id/illustratorName"
             android:layout_alignParentBottom="true"
             android:layout_marginLeft="11dp"
             android:layout_marginBottom="17dp"
             />
         
        
         <TextView android:id="@+id/illustratorCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USA"
        	android:textSize="18dp"
        	android:textColor="#888888"
        	android:layout_toRightOf="@+id/illustratorIcon"
        	 android:layout_alignParentBottom="true"
        	android:layout_marginBottom="22dp"/>         
         
    </RelativeLayout>
    
    
</LinearLayout>