<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="583dp"
    android:layout_height="402dp"
    android:background="@drawable/bigturestorypage_book_paper_image_blank"
     >

    <Button
        android:id="@+id/btnDrawHere"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/bigturestorypage_book_paper_image_icon"
       />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_centerHorizontal="true"
	    android:layout_below="@+id/btnDrawHere"
	    android:layout_marginTop="20dp"
	    android:text="Try draw here"
	    android:textSize="20dp"
	    android:textColor="#d24a46"
	    android:textStyle="bold" 
	    />
   
    
</RelativeLayout>
